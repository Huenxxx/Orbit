<Window x:Class="Orbit.Core.AstraOverlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Orbit Astra Overlay"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Width="400" Height="600"
        Left="10" Top="100"
        ResizeMode="NoResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    
    <Window.Resources>
        <!-- Sci-Fi Color Palette -->
        <Color x:Key="PrimaryColor">#00D4FF</Color>
        <Color x:Key="SecondaryColor">#A855F7</Color>
        <Color x:Key="AccentColor">#F59E0B</Color>
        <Color x:Key="BackgroundColor">#0A1428</Color>
        <Color x:Key="CardColor">#0F1E35</Color>
        
        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource SecondaryColor}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        
        <!-- Gradient Backgrounds -->
        <LinearGradientBrush x:Key="CardGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#1A0A1428" Offset="0"/>
            <GradientStop Color="#CC0F1E35" Offset="1"/>
        </LinearGradientBrush>
        
        <LinearGradientBrush x:Key="GlowBorder" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#5500D4FF" Offset="0"/>
            <GradientStop Color="#33A855F7" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- Stat Card Style -->
        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardGradient}"/>
            <Setter Property="BorderBrush" Value="{StaticResource GlowBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>
        
        <!-- Text Styles -->
        <Style x:Key="HeaderText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        
        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <Style x:Key="SubText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#80FFFFFF"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <!-- Main Container with Glass Effect -->
        <Border Background="#E60A1428" 
                BorderBrush="{StaticResource GlowBorder}" 
                BorderThickness="1" 
                CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect Color="#00D4FF" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
            </Border.Effect>
            
            <Grid Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,12">
                    <Ellipse Width="12" Height="12" Margin="0,0,8,0">
                        <Ellipse.Fill>
                            <RadialGradientBrush>
                                <GradientStop Color="#00D4FF" Offset="0"/>
                                <GradientStop Color="#0066CC" Offset="1"/>
                            </RadialGradientBrush>
                        </Ellipse.Fill>
                    </Ellipse>
                    <TextBlock Text="ORBIT ASTRA" 
                               FontFamily="Segoe UI" 
                               FontSize="16" 
                               FontWeight="Bold"
                               Foreground="{StaticResource PrimaryBrush}"/>
                    <TextBlock x:Name="StatusIndicator" 
                               Text=" â€¢ DETECTING" 
                               FontSize="10" 
                               Foreground="{StaticResource AccentBrush}"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"/>
                    
                    <!-- Close Button -->
                    <Button Content="Ã—" 
                            Width="24" Height="24" 
                            Background="Transparent" 
                            Foreground="#80FFFFFF"
                            BorderThickness="0"
                            FontSize="18"
                            HorizontalAlignment="Right"
                            Margin="80,0,0,0"
                            Click="CloseButton_Click"
                            Cursor="Hand"/>
                </StackPanel>
                
                <!-- Connection Status -->
                <Border Grid.Row="1" Style="{StaticResource StatCard}">
                    <StackPanel>
                        <TextBlock Text="LEAGUE CLIENT" Style="{StaticResource HeaderText}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                            <Ellipse x:Name="ConnectionDot" Width="8" Height="8" Fill="#EF4444" Margin="0,0,8,0"/>
                            <TextBlock x:Name="ConnectionStatus" Text="Not Detected" Foreground="#80FFFFFF" FontSize="13"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
                
                <!-- Game Status Panel (Hidden when not in game) -->
                <StackPanel x:Name="GameStatsPanel" Grid.Row="2" Visibility="Collapsed">
                    
                    <!-- Summoner Info -->
                    <Border Style="{StaticResource StatCard}">
                        <StackPanel>
                            <TextBlock Text="ACTIVE GAME" Style="{StaticResource HeaderText}"/>
                            <TextBlock x:Name="ChampionName" Text="Champion" Style="{StaticResource ValueText}" Margin="0,4,0,0"/>
                            <TextBlock x:Name="SummonerName" Text="Summoner" Style="{StaticResource SubText}"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- KDA Stats -->
                    <Border Style="{StaticResource StatCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="KDA" Style="{StaticResource HeaderText}"/>
                                <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                    <TextBlock x:Name="KillsText" Text="0" Foreground="#22C55E" FontSize="20" FontWeight="Bold"/>
                                    <TextBlock Text=" / " Foreground="#60FFFFFF" FontSize="20"/>
                                    <TextBlock x:Name="DeathsText" Text="0" Foreground="#EF4444" FontSize="20" FontWeight="Bold"/>
                                    <TextBlock Text=" / " Foreground="#60FFFFFF" FontSize="20"/>
                                    <TextBlock x:Name="AssistsText" Text="0" Foreground="{StaticResource PrimaryBrush}" FontSize="20" FontWeight="Bold"/>
                                </StackPanel>
                                <TextBlock x:Name="KdaRatio" Text="0.00 KDA" Style="{StaticResource SubText}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                <TextBlock Text="LEVEL" Style="{StaticResource HeaderText}" HorizontalAlignment="Right"/>
                                <TextBlock x:Name="LevelText" Text="1" Style="{StaticResource ValueText}" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- CS Stats -->
                    <Border Style="{StaticResource StatCard}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="CS" Style="{StaticResource HeaderText}"/>
                                <TextBlock x:Name="CsText" Text="0" Style="{StaticResource ValueText}"/>
                                <TextBlock x:Name="CsPerMinText" Text="0.0 /min" Style="{StaticResource SubText}"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" HorizontalAlignment="Right">
                                <TextBlock Text="VISION" Style="{StaticResource HeaderText}" HorizontalAlignment="Right"/>
                                <TextBlock x:Name="VisionText" Text="0" Style="{StaticResource ValueText}" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Game Time -->
                    <Border Style="{StaticResource StatCard}">
                        <StackPanel>
                            <TextBlock Text="GAME TIME" Style="{StaticResource HeaderText}"/>
                            <TextBlock x:Name="GameTimeText" Text="00:00" Style="{StaticResource ValueText}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                
                <!-- Waiting for Game Panel -->
                <Border x:Name="WaitingPanel" Grid.Row="3" Style="{StaticResource StatCard}" Visibility="Collapsed">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="â³ WAITING FOR GAME" 
                                   Foreground="{StaticResource AccentBrush}" 
                                   FontSize="12" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Start a match to see live stats" 
                                   Style="{StaticResource SubText}" 
                                   HorizontalAlignment="Center"
                                   Margin="0,4,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- Footer Info -->
                <StackPanel Grid.Row="4" VerticalAlignment="Bottom">
                    <TextBlock Text="ðŸ›¡ï¸ Safe Mode - No injection, API only" 
                               Foreground="#4022C55E" 
                               FontSize="9" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
